    let getActorsInSelection() =
	let isAFurtherAwayFromToSelection a b =
	    let getDistanceToSelection (spatial : Spatial) =
		spatial.GetGlobalTransform().origin.DistanceTo(areaCollisionShape.Force().GetGlobalTransform().origin)
	    let aDistance = getDistanceToSelection a
	    let bDistance = getDistanceToSelection b

	    if aDistance > bDistance
	    then 1
	    else if aDistance = bDistance then 0
	    else -1
	let bodies = mouseSelectionArea.Force().GetOverlappingBodies()
	match bodies.Length with
	    | 0 -> []
	    | _ ->
		bodies
		|> Array.toList
		// Remove any non-actors
		|> List.choose (fun node ->
				match node with
				    | node when (node :? ActorObject) -> Some (node :?> ActorObject)
				    | _ -> None)
		|> List.sortWith (fun a b -> isAFurtherAwayFromToSelection a b)
